---
// Snippet generator page for easy embedding
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Widget Embedding Code Generator</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 40px 20px;
    }
    
    .container {
      max-width: 900px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }
    
    h1 {
      color: #1f2937;
      margin-bottom: 10px;
      font-size: 32px;
    }
    
    .subtitle {
      color: #6b7280;
      margin-bottom: 30px;
      font-size: 16px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    label {
      display: block;
      font-weight: 600;
      margin-bottom: 8px;
      color: #374151;
      font-size: 14px;
    }
    
    input, select {
      width: 100%;
      padding: 10px 14px;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      font-size: 14px;
      font-family: inherit;
      transition: border-color 0.2s;
    }
    
    input:focus, select:focus {
      outline: none;
      border-color: #3b82f6;
    }
    
    .required {
      color: #ef4444;
    }
    
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
    
    @media (max-width: 640px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }
    
    .generate-btn {
      width: 100%;
      padding: 14px;
      background: #3b82f6;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
      margin-top: 10px;
    }
    
    .generate-btn:hover {
      background: #2563eb;
    }
    
    .output-section {
      margin-top: 40px;
      display: none;
    }
    
    .output-section.visible {
      display: block;
    }
    
    h2 {
      color: #1f2937;
      margin-bottom: 15px;
      font-size: 24px;
    }
    
    .code-block {
      background: #1f2937;
      color: #f9fafb;
      padding: 20px;
      border-radius: 8px;
      overflow-x: auto;
      position: relative;
      margin-bottom: 20px;
    }
    
    .code-block code {
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 13px;
      line-height: 1.6;
      white-space: pre;
    }
    
    .copy-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      padding: 8px 16px;
      background: #3b82f6;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 12px;
      cursor: pointer;
      transition: background 0.2s;
    }
    
    .copy-btn:hover {
      background: #2563eb;
    }
    
    .copy-btn.copied {
      background: #10b981;
    }
    
    .preview-section {
      margin-top: 30px;
      padding: 20px;
      background: #f9fafb;
      border-radius: 8px;
      border: 2px dashed #d1d5db;
    }
    
    .preview-title {
      font-weight: 600;
      margin-bottom: 10px;
      color: #374151;
    }
    
    .info-box {
      background: #eff6ff;
      border-left: 4px solid #3b82f6;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 4px;
    }
    
    .info-box p {
      color: #1e40af;
      font-size: 14px;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸš€ Widget Embedding Code Generator</h1>
    <p class="subtitle">Generate the embedding code for your chatbot widget</p>
    
    <div class="info-box">
      <p><strong>Note:</strong> Fill in the required fields below to generate your custom embedding code. You can copy and paste the generated code directly into your website.</p>
    </div>
    
    <form id="generator-form">
      <div class="form-group">
        <label for="botId">Bot ID <span class="required">*</span></label>
        <input type="text" id="botId" placeholder="e.g., abc123-def456-ghi789" required>
      </div>
      
      <div class="form-group">
        <label for="apiUrl">API URL <span class="required">*</span></label>
        <input type="url" id="apiUrl" placeholder="https://api.your-domain.com" required>
      </div>
      
      <div class="grid">
        <div class="form-group">
          <label for="theme">Theme</label>
          <select id="theme">
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="position">Position</label>
          <select id="position">
            <option value="bottom-right">Bottom Right</option>
            <option value="bottom-left">Bottom Left</option>
            <option value="top-right">Top Right</option>
            <option value="top-left">Top Left</option>
          </select>
        </div>
      </div>
      
      <div class="form-group">
        <label for="primaryColor">Primary Color</label>
        <input type="color" id="primaryColor" value="#3B82F6">
      </div>
      
      <div class="form-group">
        <label for="welcomeMessage">Welcome Message</label>
        <input type="text" id="welcomeMessage" placeholder="Hello! How can I help you today?">
      </div>
      
      <div class="form-group">
        <label for="placeholder">Input Placeholder</label>
        <input type="text" id="placeholder" placeholder="Type a message...">
      </div>
      
      <button type="submit" class="generate-btn">Generate Embedding Code</button>
    </form>
    
    <div id="output" class="output-section">
      <h2>ðŸ“‹ Your Embedding Code</h2>
      
      <div class="code-block">
        <button class="copy-btn" onclick="copyCode()">Copy</button>
        <code id="generated-code"></code>
      </div>
      
      <div class="preview-section">
        <div class="preview-title">âœ¨ Preview</div>
        <p>The widget will appear on your website with the configuration you specified. Click the chat icon in the corner to test it.</p>
      </div>
    </div>
  </div>
  
  <script>
    const form = document.getElementById('generator-form');
    const output = document.getElementById('output');
    const codeElement = document.getElementById('generated-code');
    
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      generateCode();
    });
    
    function generateCode() {
      const botId = document.getElementById('botId').value;
      const apiUrl = document.getElementById('apiUrl').value;
      const theme = document.getElementById('theme').value;
      const position = document.getElementById('position').value;
      const primaryColor = document.getElementById('primaryColor').value;
      const welcomeMessage = document.getElementById('welcomeMessage').value;
      const placeholder = document.getElementById('placeholder').value;
      
      let attributes = `  bot-id="${botId}"\n  api-url="${apiUrl}"`;
      
      if (theme !== 'light') {
        attributes += `\n  theme="${theme}"`;
      }
      
      if (position !== 'bottom-right') {
        attributes += `\n  position="${position}"`;
      }
      
      if (primaryColor !== '#3B82F6') {
        attributes += `\n  primary-color="${primaryColor}"`;
      }
      
      if (welcomeMessage) {
        attributes += `\n  welcome-message="${welcomeMessage}"`;
      }
      
      if (placeholder) {
        attributes += `\n  placeholder="${placeholder}"`;
      }
      
      const code = `<!-- Add this script tag to your HTML -->
<script src="${apiUrl.replace('/api', '')}/widget.js"><\/script>

<!-- Add the widget component -->
<chatbot-widget
${attributes}
></chatbot-widget>`;
      
      codeElement.textContent = code;
      output.classList.add('visible');
      output.scrollIntoView({ behavior: 'smooth' });
    }
    
    function copyCode() {
      const code = codeElement.textContent;
      navigator.clipboard.writeText(code).then(() => {
        const btn = document.querySelector('.copy-btn');
        btn.textContent = 'Copied!';
        btn.classList.add('copied');
        
        setTimeout(() => {
          btn.textContent = 'Copy';
          btn.classList.remove('copied');
        }, 2000);
      });
    }
  </script>
</body>
</html>
